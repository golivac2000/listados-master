@page
@model Listados.Pages.grupos.EditarModel
@{
}

<br>
<h2>Cliente Nuevo</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
        <button type='button' class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}


<form method="POST">
    <input type="hidden" name="id" value="@Model.grupoinfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Nombrea" value="@Model.grupoinfo.nombres" />

        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="emaila" value="@Model.grupoinfo.emails" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Telefono</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="telefonoa" value="@Model.grupoinfo.telefonos" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Direccion</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="direcciona" value="@Model.grupoinfo.direcciones" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-warning alert-dismissible fade show' role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type='button' class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>

        </div>

    }


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancelar</a>
        </div>
    </div>
</form>